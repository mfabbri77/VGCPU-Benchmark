function(vgcpu_verify_third_party_hashes)
    message(STATUS "[VGCPU] Verifying integrity of vendored third-party dependencies...")

    # STB Image Write
    set(STB_WRITE_PATH "${CMAKE_SOURCE_DIR}/third_party/stb/stb_image_write.h")
    if(EXISTS "${STB_WRITE_PATH}")
        file(SHA256 "${STB_WRITE_PATH}" STB_WRITE_HASH)
        if(NOT "${STB_WRITE_HASH}" STREQUAL "${VGCPU_DEP_STB_IMAGE_WRITE_SHA256}")
            message(FATAL_ERROR "[REQ-155] Hash mismatch for stb_image_write.h:\n  Expected: ${VGCPU_DEP_STB_IMAGE_WRITE_SHA256}\n  Actual:   ${STB_WRITE_HASH}")
        else()
            message(STATUS "  [OK] stb_image_write.h (${STB_WRITE_HASH})")
        endif()
    else()
        message(FATAL_ERROR "[REQ-155] Missing required vendored file: ${STB_WRITE_PATH}")
    endif()

    # STB Image Read (New)
    set(STB_READ_PATH "${CMAKE_SOURCE_DIR}/third_party/stb/stb_image.h")
    if(EXISTS "${STB_READ_PATH}")
        file(SHA256 "${STB_READ_PATH}" STB_READ_HASH)
        if(NOT "${STB_READ_HASH}" STREQUAL "${VGCPU_DEP_STB_IMAGE_READ_SHA256}")
            message(FATAL_ERROR "[REQ-155] Hash mismatch for stb_image.h:\n  Expected: ${VGCPU_DEP_STB_IMAGE_READ_SHA256}\n  Actual:   ${STB_READ_HASH}")
        else()
            message(STATUS "  [OK] stb_image.h (${STB_READ_HASH})")
        endif()
    else()
        message(FATAL_ERROR "[REQ-155] Missing required vendored file: ${STB_READ_PATH}")
    endif()

    # SSIM
    set(SSIM_PATH "${CMAKE_SOURCE_DIR}/third_party/ssim_lomont/ssim_lomont.hpp")
    if(EXISTS "${SSIM_PATH}")
        file(SHA256 "${SSIM_PATH}" SSIM_HASH)
        if(NOT "${SSIM_HASH}" STREQUAL "${VGCPU_DEP_SSIM_LOMONT_SHA256}")
            message(FATAL_ERROR "[REQ-155] Hash mismatch for ssim_lomont.hpp:\n  Expected: ${VGCPU_DEP_SSIM_LOMONT_SHA256}\n  Actual:   ${SSIM_HASH}")
        else()
            message(STATUS "  [OK] ssim_lomont.hpp (${SSIM_HASH})")
        endif()
    else()
        message(FATAL_ERROR "[REQ-155] Missing required vendored file: ${SSIM_PATH}")
    endif()

endfunction()
